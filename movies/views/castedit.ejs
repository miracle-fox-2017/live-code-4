<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form class="" action="/cast/edit/<%=cast.id%>" method="post">
      <input type="input" name="first_name" value="<%=cast.first_name%>">
      <input type="input" name="last_name" value="<%=cast.last_name%>">
      <input type="input" name="birth_year" value="<%=cast.birth_year%>">
      <select class="" name="gender">
        <%if(cast.gender == 'male'){%>
          <option value="male" selected>male</option>
          <option value="female">female</option>
        <%} else {%>
          <option value="male">male</option>
          <option value="female" selected>female</option>
        <%}%>
      </select>
      <input type="submit" name="" value="submit">
    </form>
  </body>
</html>
