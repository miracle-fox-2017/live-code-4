<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Movie</title>
    <style>
      table, th, td {
          border: 1px solid black;
          border-collapse: collapse;
      }
    </style>
  </head>
  <body>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/movies">Movie</a></li>
      <li><a href="/casts">Cast</a></li>
    </ul>
    <table style="width:50%">
      <tr>
        <th>Movie</th>
        <th>Release Year</th>
        <th>Genre</th>
        <th>Action</th>
      </tr>
      <%dataMovies.forEach(movie=>{%>
        <tr>
          <td><%=movie.name%></td>
          <td><%=movie.released_year%></td>
          <td><%=movie.genre%></td>
          <td><a href="/movies/<%=movie.id%>/addCast">Add Cast</a></td>
        </tr>
      <%})%>

    </table>
  </body>
</html>
