<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Casts Page</title>
  </head>
  <body>
    <a href="/movies">Movies</a>
    <a href="/casts">Casts</a><br><br>
    <table border="1px">
      <thead>
        <tr>
          <td>ID</td>
          <td>Full Name</td>
          <td>Bird Year</td>
          <td>Gender</td>
          <td>Actions</td>
        </tr>
      </thead>
      <tbody>
        <% casts.forEach((cast, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= cast.getFullName() %></td>
            <td><%= cast.birth_year %></td>
            <td><%= cast.gender %></td>
            <td>
              <a href="/casts/see_movies/<%= cast.id %>">See Movies</a>
              <a href="/casts/edit/<%= cast.id %>">Edit</a>
              <a href="/casts/delete/<%= cast.id %>">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/casts/add">Add Cast</a>
  </body>
</html>
