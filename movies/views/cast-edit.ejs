<html>

<head>
    <title>
        Welcome
    </title>
</head>

<body>
    <header>
        <a href="/">Home</a>
        <a href="/casts">Cast</a>
        <a href="/movies">Movie</a>
    </header>

    <form action="/casts/edit/<%= dataCast.id%>" method="POST">
        <input type="text" name="first_name" placeholder="First Name" value="<%= dataCast.first_name%>" />
        <input type="text" name="last_name" placeholder="Last Name" value="<%= dataCast.last_name%>" />
        <input type="text" name="birth_year" placeholder="Birth Year" value="<%= dataCast.birth_year%>" />
        <select name="gender">
            <% if(dataCast.gender == "female"){%>
                <option value="female" selected>Female</option>
                <option value="male">Male</option>
            <%} else{%>
                <option value="female">Female</option>
                <option value="male" selected>Male</option>
           <% }%>
                    
                </select>

        <input type="submit" value="Add Data" />
    </form>
</body>

</html>