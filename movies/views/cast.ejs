<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HALAMAN MOVIE</title>

    <style type = "text/css">

      .font {
        font-family : sans-serif;
      }
      .tengah {
        text-align :center;
      }

    </style>

  </head>
  <body style="background-color : #FF2020">
    <table border = "1">
      <thead class = "font tengah">
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Birth Year</th>
        <th>Gender</th>
        <th>Edit Data</th>
        <th>Delete Data</th>
      </thead>

      <tbody class = "font tengah">
        <% for(let i = 0 ; i < rowCast.length ; i++) { %>
        <tr>
          <td><%= rowCast[i].id %></td>
          <td><%= rowCast[i].first_name %></td>
          <td><%= rowCast[i].last_name %></td>
          <td><%= rowCast[i].birth_year %></td>
          <td><%= rowCast[i].gender %></td>
          <td><a href= "/casts/edit/<%= rowCast[i].id %>"><button>Edit</button></a></td>
          <td><a href= "/casts/delete/<%= rowCast[i].id %>"><button>Delete</button></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
