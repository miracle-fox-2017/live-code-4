<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
</head>
<body>
  <h1>casts page</h1>
  <table>
    <tr>
      <th>ID Cast</th>
      <th>Cast First Name</th>
      <th>Cast Last Name</th>
      <th>Cast Birth Year</th>
      <th>Cast Gender</th>
    </tr>
    <% for(let i = 0; i < dataJsonCasts.length; i++){ %>
      <tr>
        <td><%= dataJsonCasts[i].id %></td>
        <td><%= dataJsonCasts[i].first_name %></td>
        <td><%= dataJsonCasts[i].last_name %></td>
        <td><%= dataJsonCasts[i].birth_year %></td>
        <td><%= dataJsonCasts[i].gender %></td>
        <td><a href="/casts/edit/<%= dataJsonCasts[i].id %>">Edit</a></td>
        <td><a href="/casts/delete/<%= dataJsonCasts[i].id %>">Delete</a></td>
        <td><a href="/casts/viewMovies/<%= dataJsonCasts[i].id %>">View Movies</a></td>
      </tr>
    <% } %>
  </table>
  <form class="addCast" action="/casts/add" method="post">
    <label>Input First Name</label>
    <br>
    <input type="text" name="first_name" value="">
    <br>
    <label>Input Last Name</label>
    <br>
    <input type="text" name="last_name" value="">
    <br>
    <label>Input Birth Year</label>
    <br>
    <input type="text" name="birth_year" value="">
    <br>
    <label>Input Gender</label>
    <br>
    <select class="gender" name="gender">
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>
    <br>
    <input type="submit" name="submit" value="submit">
  </form>
</body>
</html>
