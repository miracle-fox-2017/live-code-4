<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <a href="/movies">movie</a> <a href="/casts">casts</a>
    <table border="1">
      <tr>
        <th>id</th>
        <!-- <th>first_name</th>
        <th>last_name</th> -->
        <th>full_name</th>
        <th>birth_year</th>
        <th>gender</th>
        <th>action</th>
      </tr>
      
      <!-- looping disini -->
      <% casts.forEach(cast=>{ %>
          <tr>
            <td><%= cast.id %></td>
            <!-- <td><%= cast.first_name %></td>
            <td><%= cast.last_name %></td> -->
            <td><%= cast.fullName() %></td>
            <td><%= cast.birth_year %></td>
            <td><%= cast.gender %></td>
            <td><a href="/casts/edit/<%= cast.id %>">Edit</a> | <a href="/casts/delete/<%= cast.id %>">Delete</a> | <a href="/casts/<%= cast.id %>/listMovies">See movies</a></td>
          </tr>
      <% }) %>
    </table>
    
    <a href="/casts/add">Add cast</a>
  </body>
</html>