<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <%include ../partials/menu.ejs%>
    <br>
    <h2>Movies List</h2>
    <table border="1">
      <thead>
        <th>Title</th>
        <th>Release Year</th>
        <th>Genre</th>
        <th>Option</th>
      </thead>
      <tbody>
        <%movies.forEach(movie => {%>
          <tr>
            <td><%=movie.name%></td>
            <td><%=movie.released_year%></td>
            <td><%=movie.genre%></td>
            <td>
              <a href="/movies/<%=movie.id%>/addcast">add cast</a>
            </td>
          </tr>
        <%})%>
      </tbody>
    </table>
  </body>
</html>
