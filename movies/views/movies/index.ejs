<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Movies Page</title>
  </head>
  <body>
    <a href="/movies">Movies</a>
    <a href="/casts">Casts</a><br><br>
    <table border="1px">
      <thead>
        <tr>
          <td>ID</td>
          <td>Name</td>
          <td>Released Year</td>
          <td>Genre</td>
          <td>Actions</td>
        </tr>
      </thead>
      <tbody>
        <% movies.forEach((movie, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= movie.name %></td>
            <td><%= movie.released_year %></td>
            <td><%= movie.genre %></td>
            <td>
              <a href="/movies/addcast/<%= movie.id %>">Add Cast</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
