<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <%include ../partials/menu.ejs%>
    <br>
    <h2>Add Cast to Movies</h2>
    <p><b>Judul :</b> <%=movie.name%></p>
    <form action="/movies/<%=id%>/addcast" method="post">
      <%if(err){%>
        <label style="color:red"><%=err%></label><br>
      <%}%>
      <select name="CastId">
        <%casts.forEach(cast => {%>
          <option value="<%=cast.id%>"><%=cast.getFullName()%></option>
        <%})%>
      </select><br>
      <input type="text" name="role" placeholder="Role"><br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
