<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Movie Cast</title>
  </head>
  <body>
    <h4>Add Movie Cast</h4>
    <form class="" action="/movies/addcast/<%= movie.id %>" method="post">
      <label for="">Name</label>
      <select class="" name="CastId">
        <% casts.forEach(cast => { %>
          <option value="<%= cast.id %>"><%= cast.getFullName() %></option>
        <% }) %>
      </select><br>
      <label for="">Role</label>
      <input type="text" name="role" value=""><br>
      <input type="submit" name="" value="Submit">
    </form>
  </body>
</html>
